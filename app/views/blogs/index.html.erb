
    <h2>All Blogs</h2>

    <div class="blog-list">
    <% @blogs.each do |blog| %>
        <div class="blog-card">
        <%= link_to truncate(blog.title, length: 20), blog_path(blog), class: "blog-link" %>
        <p><%= truncate(blog.content, length: 150) %></p>
        <p class="blog-author">By <strong><%= blog.user.name %></strong> on <%= blog.created_at.strftime("%B %d, %Y") %></p>

        <div class="card-actions">
            <%= link_to "Edit", edit_blog_path(blog), class: "btn edit-btn" %>
            <%= link_to "Delete", blog_path(blog), method: :delete, data: { confirm: "Are you sure?" }, class: "btn delete-btn" %>
        </div>
        </div>
    <% end %>
    </div>

