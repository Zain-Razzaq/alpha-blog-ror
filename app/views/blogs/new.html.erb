
<div class="form-section">
  <h2>Add New Blog</h2>

  <%= form_with model: @blog, data: { turbo: false }, local: true do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter blog title", required: true %>

    <%= form.label :content %>
    <%= form.text_area :content, placeholder: "Write your blog content...", required: true %>

    <%= form.label :category_ids, "Select Categories" %>
    <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
      <div class="checkbox">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>

    <%= form.submit "Publish Blog", class: "btn submit-button form-button" %>
  <% end %>
</div>
