<div class="form-section">
  <h2>Add New Blog</h2>

  <%= form_with model: @blog, local: true do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter blog title", required: true %>

    <%= form.label :content %>
    <%= form.text_area :content, placeholder: "Write your blog content...", required: true %>

    <%= form.submit "Publish Blog", class: "btn submit-button" %>
  <% end %>
</div>
