<div class="home">
  <h1>All Categories</h1>

  <% if @categories.any? %>
    <div class="blog-list">
      <% @categories.each do |category| %>
        <div class="card blog-card">
          <div class="category-header">
            <%= link_to category.name, category_path(category), class: "blog-link" %>
          </div>
          <p> <%= category.blogs.count %> blogs</p>
          <div class="card-actions">
            <% if current_user&.admin? %>
              <%= button_to "Delete", category_path(category), method: :delete, data: { turbo: false, confirm: "Are you sure you want to delete this category?" }, class: "btn delete-btn" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No categories found.</p>
  <% end %>
</div>
