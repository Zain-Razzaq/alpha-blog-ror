<div class="home">
  <h1>Category: <%= @category.name %></h1>
  <div class="card-actions">
    <% if current_user&.admin? %>
      <%= button_to "Delete", category_path(@category), method: :delete, data: { turbo: false, confirm: "Are you sure you want to delete this category?" }, class: "btn delete-btn" %>
    <% end %>
  </div>
  <% if @category.blogs.any? %>
    <%= render 'shared/blog_cards_list', blogs:@category.blogs %>
  <% else %>
    <p>No blogs in this category yet.</p>
  <% end %>
</div>